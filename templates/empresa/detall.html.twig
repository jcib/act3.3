{% extends 'menu.html.twig' %}

{% block title %}Detall{% endblock %}

{% block body %}

    <div class="container">
        <br>
        <div class="row">
            <div class="col-3">
            </div>
            <div class="col-6">
                <div class="card mb-3" style="max-width: 540px;">
                    <div class="row no-gutters">
                        <div class="col-md-4">
                        <img src="{{asset('img/.{{empresa.logo}}')}}" class="card-img" alt="...">
                        </div>
                        <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">Nom: {{empresa.nom}}</h5>
                            <p class="card-text">Correu: {{empresa.correu}}</p>
                            <p class="card-text"><small class="text-muted">Tipus: {{empresa.tipus}}</small></p>
                        </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-3">
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-3">
            </div>
            <div class="list-group col-6">
                {% for oferta in ofertes %}
                    <a href="/{{oferta.id}}" class="list-group-item list-group-item-action">
                        Oferta titol: {{ oferta.titol }}
                    </a>
                {% endfor %}
                
            </div>

            <div class="col-3">
            </div>
        </div>
    </div>
    

{% endblock %}